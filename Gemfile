source :rubygems

# Project requirements
gem 'rake'
gem 'sinatra-flash'
gem 'rack'

# Component requirements
gem 'haml'
gem 'sass'
gem 'dm-sqlite-adapter'
gem 'dm-validations'
gem 'dm-timestamps'
gem 'dm-migrations'
gem 'dm-constraints'
