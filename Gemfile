source :rubygems

# Project requirements
gem 'rake'
gem 'sinatra-flash'
gem 'rack', '1.3.3'

# Component requirements
gem 'sass'
gem 'haml'
gem 'mongo_mapper'
gem 'bson_ext', :require => 'mongo'

# Test requirements
group :test do
  gem 'mocha'
  gem 'minitest', '~>2.6.0', :require => 'minitest/autorun'
  gem 'rack-test', :require => 'rack/test'
end

# Padrino Stable Gem
gem 'padrino', '0.10.3'

group :development do
  gem 'thin'
end
